{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit App",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "module": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/app.py",
        "--server.port",
        "5000",
        "--server.address",
        "0.0.0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "STREAMLIT_HOME": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/tests/",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Sample Data",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/sample_data.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}